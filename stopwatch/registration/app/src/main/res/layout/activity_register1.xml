<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity1"
    android:background="@color/bg">


    <RelativeLayout
        android:id="@+id/entrance_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:visibility="visible">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Зарегистрируйтесь"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:gravity="center_horizontal|top" />

            <EditText
                android:id="@+id/NameEditText"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:hint="Имя"
                android:textSize="25dp"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/EmailEditText1"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:hint="Номер телефона"
                android:textSize="25dp"
                android:textColorHint="@color/white"/>
            <EditText
                android:id="@+id/PasswordEditText1"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:hint="Пароль"
                android:textSize="25dp"
                android:textColorHint="@color/white"/>
            <Button
                android:id="@+id/reg_button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:text="Зарегистрироваться"
                android:textSize="25dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/bg1" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>